@model List<Category>

	<div class="container">
		<div class="row pt-4 pb-3">
		<div class="col-6">
			<h1 class="text-primary">Category List</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="text-decoration-none btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create new Category
			</a>
		</div>
	</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<th>Category Name</th>	
			<th>Display Order</th>
			<th></th>
		</thead>
		<tbody>
		@foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
			<td>@obj.Name</td>
			<td>@obj.DisplayOrder</td>
			<td>
				<div class="w-75 btn-group" role="group">
					<!-- istead of href="--/--/id " asp-[controller / action / route]-->
					<a asp-controller="Category" asp-action="Edit" class="btn btn-primary mx-2" asp-route-categoryId ="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>

						<a asp-controller="Category" asp-action="Delete" class="btn btn-danger mx-2" asp-route-categoryId="@obj.Id"><i class="bi bi-trash"></i> Delete</a>
				</div>
			</td>
			
			</tr>
		}
		</tbody>
	</table>