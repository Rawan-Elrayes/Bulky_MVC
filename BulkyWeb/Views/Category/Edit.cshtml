@model Category //same create view

<form method="post">
	@*<input asp-for="Id" hidden> : this causes that id populated in the category object but where the pk is Id so , itis not required else it's required . ' *@
	<input asp-for="Id" hidden>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h1>Edit Category</h1>
		</div>

		<div asp-validation-summary="ModelOnly"></div>
		<div class="row mb-3 p-1">
			
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" class="fore-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="row mb-3 p-1">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" class="fore-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Edit</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control border">Back To List</a>
			</div>

		</div>
	</div>
</form>


@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}